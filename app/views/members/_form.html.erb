<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"AK" %>
  </div>

  <div class="field form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Kai" %>
  </div>
      
  <div class="field form-group slider-container">
    <%= form.label :spicy, "Acceptance to Spicy Food", class: "form-label" %>
    <%= form.range_field :spicy, min: 0, max: 5, step: 0.5, value: member.spicy || 2.5, id: "customRange3", class:"form-range"%>
    <span class="slider-value"><%= member.spicy %></span>
  </div>

  <div class="field form-group slider-container">
    <%= form.label :spicy, "How healthy do you want", class: "form-label" %>
    <%= form.range_field :healthy, min: 0, max: 5, step: 0.5, value: member.healthy || 2.5, id: "customRange3", class:"form-range"%>
    <span class="slider-value"><%= member.healthy %></span>
  </div>

  <div class="action">
    <%= form.submit %>
  </div>
<% end %>
